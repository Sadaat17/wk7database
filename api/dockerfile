FROM node:lts

# Needed for compiling native modules like sqlite3
RUN apt-get update && apt-get install -y python3 make g++ \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy only package files first
COPY package*.json ./

# Install dependencies with memory limit and legacy peer deps
RUN node --max-old-space-size=2048 $(which npm) install --legacy-peer-deps

# Copy the rest of the app
COPY . .

EXPOSE 3000

CMD ["npm", "run", "dev"]